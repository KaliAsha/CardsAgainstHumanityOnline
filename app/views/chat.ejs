<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Le ChatBrette - Salle : <%= room_id %></title>
    <link href='http://fonts.googleapis.com/css?family=Poiret+One|Quicksand|Lobster|Pacifico' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" type="text/css" href="../bootstrap/css/bootstrap.css" >
    <link rel="stylesheet" type="text/css" href="../css/flat-ui.css">
    <link rel="stylesheet" type="text/css" href="../css/style.css">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="mobile-web-app-capable" content="yes">
    <script src="//code.jquery.com/jquery-1.11.0.min.js" type="text/javascript" charset="utf-8"></script>
    <script src="/js/flatui-checkbox.js"></script>
  </head>
  <body>
    <div class="container-fluid">
      <br/>
      <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
          <div id="chatzone">
          </div>
          <div id="inputzone">
            <form role="form" onsubmit="return false">
              <div class="form-group">
		          <div><b><%= user.displayName %></b> @<%= user.username %><div>
                <input class="form-control" type="text" id="pseudozone" value="<%= user.displayName %>" style="display:none" disabled></input>
              </div>
              <div class="form-group">
                <label for="messagezone">Message</label>
                <textarea id="messagezone" class="form-control" onkeydown="if (event.keyCode == 13) { return false; }" autofocus autocomplete="off"></textarea>
                <label class="checkbox" for="checkbox1">
                  <span class="icons"><span class="first-icon fui-checkbox-unchecked"></span><span class="second-icon fui-checkbox-checked"></span></span>
                  <input type="checkbox" value="" id="forcescroll" data-toggle="checkbox">
                  Forcer le scroll auto mÃªme quand inactif
                </label>
              </div>
              <button id="sendbutton" type="submit" class="btn btn-default">Send</button>
            </form>
          </div>
        </div>
        <div class="col-md-4"></div>
      </div>
    </div>
  </body>
  <script src="/socket.io/socket.io.js" type="text/javascript"></script>
  <script src="/js/autolinker.min.js"></script>
  <script type="text/javascript">
    var room = '<%= room_id %>';
    var server_url = '<%= server_url %>';
    var user = <%-JSON.stringify(user)%>;
  </script>
  <script src="/js/chat.js" type="text/javascript"></script>
</html>
