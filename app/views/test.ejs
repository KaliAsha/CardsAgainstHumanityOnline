<!DOCTYPE html>
<html ng-app="twuzicRoom">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="mobile-web-app-capable" content="yes">
    <title>Twuzic - <%= room.name %></title>

    <!-- Bootstrap -->
    <!--<link rel="stylesheet" type="text/css" href="../css/style.css">-->

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>
  <body ng-controller="twuzicRoomCtrl">
    <div id="wave"></div>
    <br>
    <button id="send" onclick="socket.emit('go');">Music</button>

    <script src="https://code.jquery.com/jquery.js"></script>
    <script src="/socket.io/socket.io.js" type="text/javascript"></script>
    <script src="/js/wavesurfer.min.js" type="text/javascript" charset="utf-8"></script>
    <script>
      var server_url = '<%= server_url %>';
      var socket = io.connect(server_url);
      var wavesurfer = Object.create(WaveSurfer);

      socket.on('connect', function(){
        socket.emit('join_room', {room_id:'<%= room.id %>'});
      });

      wavesurfer.init({
        container: document.querySelector('#wave'),
        waveColor: 'gray',
        progressColor: 'black',
        dragSelection: false,
        interact: false
      });

      wavesurfer.on('ready', function () {
        socket.emit('music_ready');
      });

      //wavesurfer.load('https://p.scdn.co/mp3-preview/18d0a45538122fbe33f22604d0e5608789c10ae4');

      socket.on('music_received', function (music){
        wavesurfer.load(music.url);
      });

      socket.on('music_play', function (){
        wavesurfer.play();
      });
    </script>
  </body>
</html>
